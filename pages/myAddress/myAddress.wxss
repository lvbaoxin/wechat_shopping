/* pages/myAddresss/myAddress.wxss */
view{
  box-sizing: border-box;
}
.addList{
  width: 100%;
  background-color: #fff;
  margin-top: 25rpx;
  border-bottom:1px solid #ddd;
}
.addList-header{
  width: 100%;
  height: 167rpx;
 
  align-items: center;
  padding: 0 30rpx;
  margin-bottom:10rpx;
}
.addList-content{
  width: 100%;
  position: relative;
}
.userInfo{
  font-size: 33rpx;
  color: #333333;
}
.address{
  font-size: 25rpx;
  color: #666666;
  margin-top: 20rpx;
}
.address image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.arrow{
  position: absolute;
  top: 30rpx;
  right: 0;
}
.arrow image{
  width: 30rpx;
  height: 30rpx;
}
.addList-footer{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #ddd;
}
.default-add{
  font-size: 29rpx;
  color: #333333;
  display: inline-block;
}
.default-add image{
  width: 43rpx;
  height: 43rpx;
  margin-right:22rpx;
}
.text-justify{
  display: inline-block;
  vertical-align: top;
}
.add-delete{
  float: right;
  font-size: 29rpx;
  color: #676f73;
}
.add-delete image{
  width: 29rpx;
  height: 29rpx;
  margin-left: 11rpx;
  margin-top: 6rpx;
}
.bottom-box{
  border-radius: 10rpx; background-image: linear-gradient(to right, #765df7, #537afb);width:70%; font-size:30rpx;color:#fff;padding:0rpx;margin: 0 auto;height:78rpx;line-height: 78rpx;
}
.bottom-box-text{
  font-size: 33rpx;
  color: #000;
  text-align: center
}
.top{width:100%;height:50rpx;display: flex;justify-content: space-between;font-size:26rpx;}
.right{display: flex;justify-content: space-between;}