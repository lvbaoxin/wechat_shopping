/* pages/addProComment/addProComment.wxss */
page{
  background:#F5F5F2;
}
button::after{
  border:none;
}
.content{
  width:100%;
  margin:20rpx 0 0 0;
  background:#ffffff;
}
.form{
  width:95%;
  margin:0 auto;
  padding:0 20rpx 0 20rpx;
}
.stores{
  width:100%;
  display:flex;
  align-items: center;
  padding-top:30rpx;
  padding-bottom:30rpx;
}
.stores image{
  width:45px;
  height:45px;
  border:1px solid #EBEBEB;
}
.stores .stor_t{
  font-size:28rpx;
  color:#000;
  margin-left:30rpx;
}
.stars{
  width:100%;
  height:40px;
  display:flex;
  align-items: center;
  border-top:1px solid #EBEBEB;
  border-bottom:1px solid #EBEBEB;
}
.stars .text{
  font-size:30rpx;
  flex:1;
}
.stars .star_list{
  flex:1;
  position:relative;
  margin-left:100rpx;
}
.textarea{
  width: 100%;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  padding-top:20rpx;
}
.textarea .fontNum{
  font-size:30rpx;
  line-height:40rpx;
  color:#333;
}
.textarea textarea{
  -webkit-flex: 1;
  flex: 1;
  height:240rpx;
  font-size:26rpx;
  line-height: 42rpx;
  text-align: left;
}
.p_s{
  font-size:30rpx;
  line-height:40rpx;
  color:#CCCCCC;
}

.submit {
  width: 524rpx;
  height:81rpx;
  margin:40rpx auto;
  background:#4768f3;
  color:#fff;
  font-size:32rpx;
  line-height:81rpx;
  border-radius:10rpx;
  padding:0;
}

.star-image {
  position: relative;
  width: 30rpx;
  height: 30rpx;
}

.item {
  position: absolute;
  top:0;
  width: 30rpx;
  height: 30rpx;
}


/* 上传图片 */
.flex{
  display: flex;
}
.up-pic{
  width: 100%;
  justify-content: center;
}
.pic-box{
  flex-flow:wrap;
  width:100%; 
}
.ap-box{
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin:0 15rpx 20rpx 10rpx;
}
.add-pic{
  width: 163rpx;
  height: 163rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;

}
.add-photo{  margin-bottom:20rpx;}
.add-photo image{
  width:163rpx;
  height:163rpx;
}
/* 删除图片 */
.img-de{
  width:45rpx;
  height:45rpx;
  border-radius:50%;
  position:absolute;
  right:-30rpx;
  top:-15rpx;
  z-index:999;
}
.img-de .img {
  width:30rpx;
  height:30rpx;
}
.picture{

  z-index: 99;
  display: flex;
  flex-direction: row;
  margin:5rpx auto;
  width:95%;

}

.picture_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height:163rpx;
  width: 163rpx;
}
.picture_item image{
  width: 163rpx;
  height: 163rpx;
}
.picture_upload{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 163rpx;
  width: 163rpx;
  margin: 5rpx;
  border:1rpx solid #f2f2f2;
 
}
.picture_upload image{
  height: 163rpx;
  width: 163rpx;
}
.picture_delete{
  width: 40rpx;
  height: 30rpx;
  position: absolute;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  top:0;
  right:0;
  border: 1rpx #e6e6e6 solid;
  border-top: none;
 
}
.picture_delete image{
  width: 40rpx;
  height: 30rpx;
}
.xiamian{width:95%;margin:20rpx auto;border-top:1rpx solid #ddd;padding:20rpx 0;}
.wenzi{color:#a5a5a5;font-size:26rpx;}
