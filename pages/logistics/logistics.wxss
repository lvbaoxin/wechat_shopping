.orderDetails {
  background: #fff;
  margin:20rpx 0;
  border-bottom: 20rpx solid #f5f5f5;
  
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
  font-size:26rpx;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #000;
  font-size: 22rpx;
}
.allnum{margin-right: 20rpx;
  color: #000;
  font-size: 26rpx;
  text-align: right;
}
.allmoney{color:#ff0006;font-size: 26rpx;}
.productstate{
  color:#ff0006;
}
 
.orderListDetails {
  display: flex;
  height: 225rpx;
  
  background:#fff;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:179rpx;
  width:186px;
  margin-top: 20rpx;
  margin-left: 20rpx;
  position: relative
}
.allnuma{position: absolute;bottom:0;color:#fff;text-align: center;height:30rpx;line-height: 30rpx;width:100%;font-size:24rpx;}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
 font-size:26rpx;
}
 
.orderListDetails .productInfo .productTitle {
  overflow: hidden;
