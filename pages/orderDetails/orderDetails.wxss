/*切换栏*/
.swiper-tab {
  height: 40px;
  line-height: 40px;
  background: #fff;
  color:#000 ;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom:1px solid #d9d9d9;
}
 .btnlist{padding:0;font-size:24rpx;font-weight: normal;width:142rpx;height:60rpx;border-radius: 6rpx;margin:10rpx;border:1rpx solid #4768f3;color:#4768f3;text-align: center;line-height: 60rpx;}
.swiper-tab-list {
  font-size: 24rpx;
  padding:0px 20rpx;
  
}
 
.on {
  border-bottom:2px solid #4768f3;
  color: #4768f3;
}
 
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #BEBEBE	;
  margin-top:5px;
}
 
.navTopList .order-info {
  text-align: center;
}
 
.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}
 
.navTopList .order-info text {
  font-size: 34rpx;
}
 
.navTopList .order-info text.active {
  color: #ff6662;
}
 
.navTopList .ywc,.navTopList .dfk,.navTopList .yqx {
  flex: 1;
}
 
 
/*订单列表*/
.orderDetails {
  background: #fff;
  margin:20rpx 0;
  border-bottom: 20rpx solid #f5f5f5;
  
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
  font-size:26rpx;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #000;
  font-size: 22rpx;
}
.allnum{margin-right: 20rpx;
  color: #000;
  font-size: 26rpx;
  text-align: right;
}
.allmoney{color:#ff0006;font-size: 26rpx;}
.productstate{
  color:#ff0006;
  width:100rpx;
}
 
.orderListDetails {
  display: flex;
  height: 225rpx;
  
  background:#f4f4f4;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:179rpx;
  width:186px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
 font-size:26rpx;
}
 
.orderListDetails .productInfo .productTitle {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:5rpx;
  font-size:22rpx;
  color:#898989;
}
 
.productCount {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ebebeb;
}

.cover{width:186rpx;height:179rpx;}

